{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python"
        },
        {
            "src": "admin_dashboard/**",
            "use": "@vercel/static"
        },
        {
            "src": "anthill_chatbot_widget.html",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "app.py"
        },
        {
            "src": "/admin_dashboard/(.*)",
            "dest": "admin_dashboard/$1"
        },
        {
            "src": "/anthill_chatbot_widget.html",
            "dest": "anthill_chatbot_widget.html"
        },
        {
            "src": "/(.*)",
            "dest": "app.py"
        }
    ]
}
