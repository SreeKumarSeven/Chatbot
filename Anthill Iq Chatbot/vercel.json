{
    "version": 2,
    "builds": [
        {
            "src": "backend/app.py",
            "use": "@vercel/python"
        },
        {
            "src": "backend/admin_dashboard/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/app.py"
        },
        {
            "src": "/admin_dashboard/(.*)",
            "dest": "backend/admin_dashboard/$1"
        },
        {
            "src": "/(.*)",
            "dest": "backend/app.py"
        }
    ]
} 